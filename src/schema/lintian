CREATE DOMAIN lintian_tag_type AS TEXT
NOT NULL
CHECK(
     VALUE = 'error'
  OR VALUE = 'warning'
  OR VALUE = 'information'
  OR VALUE = 'experimental'
  OR VALUE = 'overriden'
);

CREATE TABLE %(table)s (
  package TEXT NOT NULL,
  tag_type lintian_tag_type,
  package_type TEXT,
  tag TEXT NOT NULL
);

GRANT SELECT ON %(table)s TO PUBLIC;
